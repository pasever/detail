<div id="logindiv">
  <form class="form" action="/login" method="POST" id="login">
    <h3>Login Form</h3>
    <hr/>
    <label>Username : </label>
    <input type="text" class="username" minlength="2" required placeholder="John Dow" />
    <label>Password : </label>
    <input type="text" class="password" minlength="4" required placeholder="************" />
    <hr/>
    <input type="submit" class="loginbtn" value="Login" />
    <a href="/">
    <input type="button" class="cancelbtn" value="Return" />
    </a>
  <a href="/login">
  <input type="button" class="clear" value="Clear" />
  </a>
  </form>
</div>
